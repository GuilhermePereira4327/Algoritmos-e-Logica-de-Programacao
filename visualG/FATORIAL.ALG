Algoritmo "fatorial"

Var

  resposta : inteiro
  n, fatorial :inteiro

Inicio

      resposta <- 1

      escreva("Digite o valor de N: ")
      leia(n)
      
      para fatorial de n ate 1 passo -1 faca
          resposta <- resposta * fatorial
      fimpara
      
      escreval("FATORIAL = ", resposta)

Fimalgoritmo